@model NotataSub.Models.Faculty

@{ ViewData["Title"] = "Edit"; }


<style>
    .edit-page {
        display: unset;
    }
</style>

@section EditPage
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="col-5">
        <div class="form-group">
            <label asp-for="UniersityId" class="control-label"></label>
            <select asp-for="UniersityId" class="form-control" asp-items="ViewBag.UniersityId"></select>
            <span asp-validation-for="UniersityId" class="text-danger"></span>
        </div>
    </div>
    <div class="col-5">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <input type="hidden" asp-for="FacultyId" />
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
