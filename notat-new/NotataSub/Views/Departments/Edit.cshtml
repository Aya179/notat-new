@model NotataSub.Models.Department

@{ ViewData["Title"] = "Edit"; }


<style>
    .edit-page {
        display: unset;
    }
</style>

@section EditPage
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-5">

        <div class="form-group">
            <label asp-for="UniversityId" class="control-label"></label>
            <select asp-for="UniversityId" class="form-control" asp-items="ViewBag.UniversityId"></select>
            <span asp-validation-for="UniversityId" class="text-danger"></span>
        </div>
    </div>
    <div class="col-5">

        <div class="form-group">
            <label asp-for="FacultyId" class="control-label"></label>
            <select asp-for="FacultyId" class="form-control" asp-items="ViewBag.FacultyId"></select>
            <span asp-validation-for="FacultyId" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="DepartmentId" />


    <div class="col-5">

        <div class="form-group">
            <label asp-for="DepartmentName" class="control-label"></label>
            <input asp-for="DepartmentName" class="form-control" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>
    </div>

}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

