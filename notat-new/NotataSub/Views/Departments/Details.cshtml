@model NotataSub.Models.Department

@{ ViewData["Title"] = "Detiles"; }

<style>
    .detiles-page {
        display: unset;
    }
</style>


@section DetilesPage
{
    <table class="table">
        <tr>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <td>
                @Html.DisplayFor(model => model.DepartmentName)
            </td>
        </tr>
   
        <tr><th>
            @Html.DisplayNameFor(model => model.Faculty)
        </th>
        <td>
            @Html.DisplayFor(model => model.Faculty.Name)
        </td></tr>
        <tr><th>
            @Html.DisplayNameFor(model => model.University)
        </th>
        <td>
            @Html.DisplayFor(model => model.University.City)
        </td></tr>
    </table>


    <div class="mt-2 mr-4">
        <form>
            <button type="submit" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.DepartmentId">
                <i class="far fa-edit"></i>
                تعديل
            </button>
        </form>

    </div>
}