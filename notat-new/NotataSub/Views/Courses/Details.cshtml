@model NotataSub.Models.Course
@{ ViewData["Title"] = "Detiles"; }

<style>
    .detiles-page {
        display: unset;
    }
</style>


@section DetilesPage
{
    <table class="table">

        <tr>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <td>
                @Html.DisplayFor(model => model.CourseName)
            </td>
        </tr>
        <tr>            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <td>
                @Html.DisplayFor(model => model.Teacher)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <td>
                @Html.DisplayFor(model => model.Year)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <td>
                @Html.DisplayFor(model => model.Semester)
            </td>
        </tr>
       
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <td>
                @Html.DisplayFor(model => model.Price)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <td>
                @Html.DisplayFor(model => model.Department.DepartmentId)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <td>
                @Html.DisplayFor(model => model.Faculty.Name)
            </td>
            </tr>
    </table>


    <div class="mt-2 mr-4">
        <form>
            <button type="submit" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.CourseId">
                <i class="far fa-edit"></i>
                تعديل
            </button>
        </form>
       
    </div>
}