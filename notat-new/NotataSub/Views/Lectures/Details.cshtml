@model NotataSub.Models.Lecture
@{ ViewData["Title"] = "Detiles"; }

<style>
    .detiles-page {
        display: unset;
    }
</style>


@section DetilesPage
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LectureNum)
            </th>
            <td>
                @Html.DisplayFor(model => model.LectureNum)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <td>
                @Html.DisplayFor(model => model.Title)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PublishDate)
            </th>
            <td>
                @Html.DisplayFor(model => model.PublishDate)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pages)
            </th>
            <td>
                @Html.DisplayFor(model => model.Pages)
            </td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <td>
                @Html.DisplayFor(model => model.Price)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <td>
                @Html.DisplayFor(model => model.Year.Yearname)
            </td>
        </tr>
        
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <td>
                @Html.DisplayFor(model => model.Course.CourseName)
            </td>
        </tr>
    </table>

    
        <div class="card card-primary">
      
            <div class="card-body">
                <div class="row">

                    @foreach (var image in ViewBag.ImageList)
                    {
                        <div class="col-sm-2">
                            <a href="@image" data-lightbox="photos" data-title="" data-gallery="gallery">
                                <img src="@image" class="img-fluid mb-2" >
                            </a>
                        </div>
                    }


                </div>
            </div>
        </div>


    <div class="mt-2 mr-4">
        <form>
            <button type="submit" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.CourseId">
                <i class="far fa-edit"></i>
                تعديل
            </button>
        </form>

    </div>
}