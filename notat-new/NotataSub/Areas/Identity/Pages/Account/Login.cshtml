@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <link rel="icon" href="~/images/logo.png">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Takke</title>

    <link rel="stylesheet" href="https://cdn.rtlcss.com/bootstrap/v4.2.1/css/bootstrap.min.css">
    <link href="~/AdminStyle/css/styles.css" asp-append-version="true" rel="stylesheet" />

</head>
<body>

    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                                <div class="card-body">
                                    <form id="account" method="post">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-floating mb-3">
                                            <input asp-for="Input.Email" class="form-control" type="email" placeholder="name@example.com" />
                                            <label asp-for="Input.Email"></label>
                                        </div>
                                        <div class="form-floating mb-3 ">
                                            <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
                                            <label asp-for="Input.Password"></label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-check mb-3">
                                            <label class="form-check-label" asp-for="Input.RememberMe">
                                                <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                        <div class="d-flex align-items-center  mt-4 mb-0  d-flex justify-content-center">

                                            <button type="submit" class="btn btn-primary ">Login</button>
                                        </div>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</body>

</html>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
