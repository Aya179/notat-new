@model NotataSub.Models.Book

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<style>
    .detiles-page {
        display: unset;
    }
</style>
@section DetilesPage
{

    <table class="table">
        <tr>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <td>
                @Html.DisplayFor(model => model.Title)
            </td>

        </tr>
        <tr>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Pages)
            </th>
            <td>
                @Html.DisplayFor(model => model.Pages)
            </td>

        </tr>
        <tr>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <td>
                @Html.DisplayFor(model => model.Price)
            </td>

        </tr>
        <tr>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <td>
                @Html.DisplayFor(model => model.Year)
            </td>

        </tr>
        <tr>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.CatId)
            </th>
            <td>
                @Html.DisplayFor(model => model.Cat.Name)
            </td>

        </tr>
        <tr>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.WriterName)
            </th>
            <td>
                @Html.DisplayFor(model => model.WriterName)
            </td>
            <tr>             <th class="w-25">
                @Html.DisplayNameFor(model => model.OtherWriter)
            </th>
            <td>
                @Html.DisplayFor(model => model.OtherWriter)
            </td>
            </tr>

        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <td>
                @if (Model.Image != null)
                {
                    <div class="form-group ">


                        <img src="@ViewBag.ImageDataUrl" style="border: 1px solid #ddd; border-radius: 100px; padding: 5px; width: 150px;" />

                        
                    </div>
                }
            </td>
        </tr>


    </table>
    

    <div class="mt-2 mr-4">
        <form>
            <button type="submit" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="far fa-edit"></i>
                تعديل
            </button>
        </form>

    </div>
}