@model IEnumerable<NotataSub.Models.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="row">
    <div class="col-12">


        <div class="card">

            <div class="card-header">
                <h3 class="card-title">

                    <a class="float-right" asp-action="FreeBooks">
                 
                        الكتب المجانية
                    </a>
                </h3>
                <a class="float-left" asp-action="Create">
                    <i class="fa fa-plus"></i>
                    إنشاء كتاب جديد

                </a>
            </div>

            <div class="card-body">
                <div class="table-responsive pt-2">
                    <table class="table table-striped" id="courses_table">
                        <thead>
                            <tr>
                                <th style="text-align:center;">
                                    @Html.DisplayNameFor(model => model.CatId)
                                </th>
                                <th style="text-align:center;">
                                    @Html.DisplayNameFor(model => model.WriterName)
                                </th> 
                                <th style="text-align:center;">
                                    @Html.DisplayNameFor(model => model.Year)
                                </th>
                                <th align="center">
                                    @Html.DisplayNameFor(model => model.Pages)
                                </th>

                                <th style="text-align:center;">
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th style ="text-align:center;" >
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>

                               

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Cat.Name)
                                </td>
                                    <td align="center">
                                    @Html.DisplayFor(modelItem => item.WriterName)
                                </td>
                                    <td align="center">
                                    @Html.DisplayFor(modelItem => item.Year)
                                </td>
                                    <td align="center">
                                    @Html.DisplayFor(modelItem => item.Pages)
                                </td>

                                    <td align="center">
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td align="center"> 
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                   
                                

                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a> |
                                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script>
        $(function () {
            $('#courses_table').DataTable({
                "lengthMenu": [[5, 10, 15, 20, 25, -1], [5, 10, 15, 20, 25, "All"]],
                "responsive": true,
                "language": {
                    "sProcessing": "جارٍ التحميل...",
                    "sLengthMenu": "أظهر _MENU_ مدخلات",
                    "sZeroRecords": "لم يتم العثور على أية نتائج",
                    "sInfo": "إظهار _START_ إلى _END_ من أصل _TOTAL_ مدخل",
                    "sInfoEmpty": "يعرض 0 إلى 0 من أصل 0 سجل",
                    "sInfoFiltered": "(منتقاة من مجموع _MAX_ مُدخل)",
                    "sInfoPostFix": "",
                    "sSearch": "البحث:",
                    "sUrl": "",
                    "oPaginate": {
                        "sFirst": "الأول",
                        "sPrevious": "السابق",
                        "sNext": "التالي",
                        "sLast": "الأخير"
                    }
                }
            });
        });</script>
}

