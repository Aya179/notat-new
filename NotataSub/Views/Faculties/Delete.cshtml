@model NotataSub.Models.Faculty

@{ ViewData["Title"] = "Delete"; }

<style>
    .delete-page {
        display: unset;
    }
</style>





@section DeletePage
{
    <table class="table">
        <tr>
            <th class="w-25">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Uniersity)
            </th>
